{
  "compilerOptions": {
    "incremental": true,
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "lib",
    "paths": {
            "@/*": ["./src/*"]
        },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
   "include": ["src"],
  "exclude": [
    "__tests__"
  ]
}

